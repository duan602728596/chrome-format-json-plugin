  "devDependencies": {
    "@sweet/milktea-cli": "github:duan602728596/sweet#build-milktea-cli",
    "@sweet/util-tools": "github:duan602728596/sweet#build-util-tools",
    "@types/chrome": "^0.0.81",
    "@types/node": "^11.9.4",
    "babel-eslint": "^10.0.1",
    "commitizen": "^3.0.5",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.14.1",
    "eslint-plugin-react": "^7.12.4",
    "gulp": "^4.0.0",
    "gulp-changed": "^3.2.0",
    "gulp-plumber": "^1.2.1",
    "gulp-pug": "^4.0.1",
    "gulp-sass": "^4.0.2",
    "gulp-terser": "^1.1.7",
    "gulp-typescript": "^5.0.0",
    "gulp-yaml": "^2.0.3",
    "highlightjs": "^9.12.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "node-sass": "^4.11.0",
    "pug": "^2.0.3",
    "rimraf": "^2.6.3",
    "terser": "^3.16.1",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
